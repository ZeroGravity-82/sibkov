{% extends "base.html.twig" %}

{% set metaDesc = "Продукция фермы «Сибирский ковчег»" %}
{% set metaKey  = "козье молоко, сыры по зарубежным рецептурам, крафтовый сыр, козий сыр, домашний йогурт и творог" %}

{% block title %} Купить домашние сыры, йогурт, творог, козье молоко {% endblock %}

{% block stylesheets %}
