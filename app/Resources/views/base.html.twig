{% set currentRoute = app.request.get("_route") %}
{% set sectionHomepageActive = currentRoute starts with "homepage" %}
{% set sectionProductActive  = currentRoute starts with "product" %}
{% set sectionMediaActive    = currentRoute starts with "media" %}
{% set sectionBookActive     = currentRoute starts with "book" %}
{% set sectionOrderActive    = currentRoute starts with "order" %}
{% set sectionContactActive  = currentRoute starts with "contact" %}
{% set sectionHomepageTitle  = 'Главная' %}
{% set sectionProductTitle   = 'Наша продукция' %}
{% set sectionMediaTitle     = 'Фото и видео' %}
{% set sectionBookTitle      = 'Литература' %}
{% set sectionOrderTitle     = 'Как заказать' %}
{% set sectionContactTitle   = 'Контакты' %}

<!DOCTYPE html>
<html lang="ru">
    <head itemscope itemtype="https://schema.org/WebSite">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="description" content="{{ metaDesc }}">
        <meta name="keywords" content="{{ metaKey }}">

        <title>{% block title %}{% endblock %} – Ферма «Сибирский ковчег»</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('layout') }}
        {% endblock %}

        {# Site icons #}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <div class="container">
            {% include '_header.html.twig' %}

            {% block content %}{% endblock %}

            {% include '_footer.html.twig' %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('layout') }}
        {% endblock %}
        <noscript><div><img src="https://mc.yandex.ru/watch/52238566" style="position:absolute; left:-9999px;" alt=""></div></noscript>
    </body>
</html>
