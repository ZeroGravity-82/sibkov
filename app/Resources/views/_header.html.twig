{% set currentRoute = app.request.get("_route") %}
{% set sectionHomepage = currentRoute starts with "homepage" %}
{% set sectionProduct  = currentRoute starts with "product" %}
{% set sectionMedia    = currentRoute starts with "media" %}
{% set sectionBook     = currentRoute starts with "book" %}
{% set sectionOrder    = currentRoute starts with "order" %}
{% set sectionContact  = currentRoute starts with "contact" %}

<div id="header">
    <div id="header-phones">
        <a href="tel:+79137917783">8-913-791-77-83</a>
        <a href="tel:+79639472148">8-963-947-21-48</a>
    </div>
    <div class="header-name-wrapper">
        <div id="header-name" class="header-name-content">
            <img src="{{ asset('images/header_name.png') }}" alt="Ферма «Сибирский ковчег»">
        </div>
    </div>
</div>
<div class="clearfix"></div>
<nav class="navbar navbar-expand-lg sticky-top">
    <div class="navbar-content">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapseMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapseMenu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionHomepage %} active {% endif %}" href="{{ path('homepage') }}">
                        Главная
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionProduct %} active {% endif %}" href="{{ path('product_index') }}">
                        Наша продукция
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionMedia %} active {% endif %}" href="{{ path('media_index') }}">
                        Фото и видео
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionBook %} active {% endif %}" href="{{ path('book_index') }}">
                        Литература
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionOrder %} active {% endif %}" href="{{ path('order_index') }}">
                        Как заказать
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 {% if sectionContact %} active {% endif %}" href="{{ path('contact_index') }}">
                        Контакты
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
